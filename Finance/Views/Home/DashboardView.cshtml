@using Finance.Models;
@model DashboardViewModel
using Finance.Models.HelperClass
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "DashboardView";
}

<h2>DashboardView</h2>
<p>Recent Transactions</p>
<p>
    Credit Transactions: @Model.CrTransactions
</p>
<p>
    Debit Transactions: @Model.DrTransactions
</p>

<p>
    Balances: @Model.Balances
</p>

<p>
    ReconciledBalances: @Model.ReconciledBalances
</p>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive" style="padding-bottom:70px">
            <table id="transview" class="table table-striped">

                <thead>
                    <tr bgcolor="#ADD8E6">
                        <th>
                            Date
                        </th>
                        <th>
                            Account Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Amount
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>
                                @transaction.Date.ToString("MMM dd yyyy")
                            </td>
                            <td>
                                @transaction.Account.Name
                            </td>
                            <td>
                                @transaction.Description
                            </td>
                            <td>
                                @transaction.Amount
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<p>Account Balance</p>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive" style="padding-bottom:70px">
            <table id="accview" class="table table-striped">

                <thead>
                    <tr bgcolor="#ADD8E6">
                        <th>
                            Account Name
                        </th>
                        <th>
                            Account Balance
                        </th>
                        <th>
                            Reconciled Balances
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var account in Model.PersonalAccounts)
                    {
                        <tr>
                            <td>
                                @account.Name
                            </td>
                            <td>
                                @account.Balance
                            </td>
                            <td>
                                @account.ReconciledBalance
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

