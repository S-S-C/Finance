@model IEnumerable<Finance.Models.Transaction>

@{
    ViewBag.Title = "Index";
}




<div class="content">

    <div class="">
        <div class="page-header-title">
            <h4 class="page-title">Transaction Index</h4>
        </div>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <div class="page-content-wrapper ">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <h4 class="m-b-30 m-t-0">Transactions in Checking</h4>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <table id="datatable" class="table-responsive table-striped table-bordered">
                                        <thead>
                                            @*<table class="table">*@
                                            <tr>
                                                <th>
                                                    Date
                                                </th>
                                                <th>
                                                    Account Name
                                                </th>
                                                <th>
                                                    Description
                                                </th>
                                                <th>
                                                    Entered By
                                                </th>
                                                <th>
                                                    Category
                                                </th>
                                                <th>
                                                    Amount
                                                </th>
                                                @*<th>
                                                        Type
                                                    </th>*@

                                                @*<th>*@
                                                @*@Html.DisplayNameFor(model => model.Void)*@
                                                @*</th>*@
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Reconciled)
                                                </th>
                                                <th>
                                                    Reconciled Amount
                                                </th>
                                                @*<th>*@
                                                    @*@Html.DisplayNameFor(model => model.IsDeleted)*@
                                                @*</th>*@
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.Date.ToString("MMM dd yyyy")
                                                        @*@Html.DisplayFor(modelItem => item.Date)*@
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Account.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.EnteredBy.FirstName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Amount)
                                                    </td>
                                                    @*<td>
                                                            @Html.DisplayFor(modelItem => item.Type)
                                                        </td>*@
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Reconciled)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ReconciledAmount)
                                                    </td>
                                                    @*<td>
                                                            @Html.DisplayFor(modelItem => item.Void)
                                                        </td>*@
                                                    @*<td>
                                                            @Html.DisplayFor(modelItem => item.IsDeleted)
                                                        </td>*@
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                        @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*</table>*@
